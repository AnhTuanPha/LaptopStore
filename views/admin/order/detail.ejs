<% include ../layout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
    <% include ../layout/menu.ejs %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Order Details</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <div class="content-body">
                        <div class="row">
                            <% if(response_message){ %>
                            <div class="alert alert-success"><%= response_message%></div>
                            <% } %>
                            <div class="row" style="padding-left: 50px;">
                                <div>
                                    <p><strong>Name: </strong><%= order.name %></p> 
                                </div>
                                <div>
                                    <p><strong>Phone: </strong> <%= order.phone %></p>
                                </div>
                                <div>
                                    <p><strong>Email: </strong> <%= order.email %></p>
                                </div>
                                <div>
                                    <p><strong>Message: </strong> <%= order.msg %></p>
                                </div>

                                <div>
                                    <p><strong>Ship: </strong> <%= order.ship %></p>
                                </div>
            
                                 <div>
                                 <!-- a lấy dữ liệu chỗ đây dùm em -->
                                    <p><strong>Payments : </strong> <%= order.payment %></p>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Name</th>
                                            <th>Photo</th>
                                            <th>Amount</th>
                                            <th>Money</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var id = 0; var total = 0 %>
                                        <% order.details.forEach(function(detail){ id ++; total += detail.price;%>
                                        <tr>
                                            <td><%= id%></td>
                                            <td><%= detail.item.name%></td>
                                            <td> <img src="upload/<%= detail.item.photo%>" width="150px" alt=""></td>
                                            <td><%= detail.quantity%></td>
                                            <td style= "color: red;"><%= parseInt(detail.price).toLocaleString('en-us') %>đ</td>
                                            
                                        </tr>
                                        <%})%>
                                        <tr>
                                            <td colspan="5">
                                                <% if(order.status === 1){ %>
                                                <a href="/admin/order/thanh-toan/<%= order.id %>">Pay</a>
                                                <%}else{ %>
                                                <span>Paid</span>
                                                <%}%>
                                            </td>
                                        </tr>

                                        
                                        <tr>
                                            <td colspan="5">
                                                <p style="color:red"> Total Money: <strong><%= parseInt(total).toLocaleString('en-us') %>đ</strong></p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows "></div>
</div>

<% include ../layout/footer.ejs %>
