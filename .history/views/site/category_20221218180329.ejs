<% include layout/header.ejs %>

<div id="maincontainer">
  <section id="product">
    <div class="container">
     <!--  breadcrumb -->  
      <ul class="breadcrumb">
        <li>
          <a href="#">Home / Danh Mục sản phẩm</a>
        
        </li>
      </ul>
      <div class="row">        
        <!-- Sidebar Start-->
        <aside class="span3">
         <!-- Category-->  
          <div class="sidewidt">
            <h2 class="breadcrumb" style="background-color:#243a76 ;"><span style="color:white ;">DANH MỤC SẢN PHẨM</span></h2>
            <ul class="nav nav-list categories">
              <% categories.forEach(function(ca){ %>
                <li >
                  <a href="/danh-muc/<%= ca.urlRewriteName %>.<%= ca.id%>.html" style="color:#243a76 ;"><%= ca.name%></a>
                </li>
             
              <%})%>
            </ul> 
          </div>
         <!--  Best Seller -->  
       
          <!-- Latest Product -->  
          
          <!--  Must have -->  
         
        </aside>
        <!-- Sidebar End-->
        <!-- Category-->
        <div class="span9">          
          <!-- Category Products-->
          <section id="category">
            <div class="row">
              <div class="span9">
              <!-- Category-->
                <section id="categorygrid">
                  <ul class="thumbnails grid">
                    <% products.forEach(function(pro){  %>
                        <li class="span3">
                        
                        <div class="thumbnail">
                          <div class="thumbnail">
                          <% if(pro.sale > 0) { %>
                            <span class="tooltip-test" style="background-color: red; color: white; font-size: 20px; z-index: 1000; position: absolute; top: 0; left: 0; padding: 6px 10px;border-radius: 100%;">new</span>
                          <% } %>
                          <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img alt="" src="upload/<%= pro.photo %>" style="font-size:10px ; height : 300px ;"></a>
                          <div class="pricetag" style="background:white;">
                            <span class="spiral"style="display:none" ></span><a href="/add-cart.<%= pro.id %>" class="productcart" style="display:none">ADD TO CART</a>
                            <a class="prdocutname" href="product.html" style="color:black ;font-size: 16px ;"><%= pro.name %></a>
                            <div class="price">
                            <!-- parseInt(x).toLocaleString('en-us') cho số tiền có dấu phẩy-->
                              <% if(pro.sale > 0) { %>
                              <div class="pricenew" style="color:red ;float: left; "><%= parseInt(pro.salePrice).toLocaleString('en-us') %> <p style="color:red ;float:right;">đ</p></div>
                              <div class="pricenew" style="color:black ;float: left; text-decoration: line-through; margin-right: 18px"><%= parseInt(pro.price).toLocaleString('en-us') %><p style="color:black  ;float: right;">đ</p></div>
                              <% } else { %>
                               <div class="pricenew" ><%= parseInt(pro.price).toLocaleString('en-us') %> 
                               <p style="color:black  ;float: right;">&nbsp; đ</p></div>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      </li>
                    <% })%>
                  </ul>
                  <div class="pagination pull-right">
                    <ul></ul>
                  </div>
                </section>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Footer -->
<% include layout/footer.ejs %>
